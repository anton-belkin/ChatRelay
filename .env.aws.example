# AWS Elastic Beanstalk Environment Variables
# Copy this file and configure these variables in AWS EB Console or via eb setenv

# Required - OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Required - Session Configuration
SESSION_SECRET=your-secure-random-64-character-secret-here

# Required - Redis/ElastiCache Configuration
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=optional-redis-password

# Application Configuration
NODE_ENV=production
PORT=8081
LOG_LEVEL=info

# Service URLs (use localhost for multi-container setup)
AGENT_SERVICE_URL=http://localhost:8090
TOOL_BRIDGE_URL=http://localhost:8080

# Feature Flags
HISTORY_MAX_MESSAGES=50
AGENT_SERVICE_TIMEOUT=30000
TOOL_BRIDGE_TIMEOUT=30000

# AWS-specific Configuration
AWS_REGION=us-east-1
EFS_ID=fs-xxxxxxxx

# Optional - Monitoring
ENABLE_DEBUG_PANEL=false
COLLECT_DEBUG_EVENTS=true

# Optional - Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
